---
import Layout from "@/layouts/Layout.astro";
import { getDogs } from "../../../sanity/utilis/sanity";
import CardsDogs from "@/components//CardsDogs.astro";

const dogs = await getDogs();
---

<Layout title="Welcome to Astro.">
  <section class="container mx-auto">
    {dogs.length > 0 ? (
      <div class="">
        <div class="mb-6">
          <h2 class="h2">{dogs.length} chiens disponibles</h2>
          <p class="mb-4">Voici les chiens actuellement pr√©sents au refuge.</p>
        </div>

        <div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 px-4 py-8">
          {dogs.map((dog) => (
            <CardsDogs data={dog} />
          ))}
        </div>
      </div>
    ) : (
      <h1 class="text-xl font-semibold col-span-full text-center mt-8">
        Aucun chien disponible...
      </h1>
    )}
  </section>
</Layout>
