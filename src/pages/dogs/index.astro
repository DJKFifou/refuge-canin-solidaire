---
import Card from "@/components/Card.astro";
import Layout from "@/layouts/Layout.astro";
import { getDogs } from "../../../sanity/utilis/sanity";

const dogs = await getDogs();
---

<Layout title="Welcome to Astro.">
  <section class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 px-4 py-8 max-w-7xl mx-auto
  ">
    {dogs.length ? dogs.map((dog) =>
     <Card title="dogs" data={dog} />)
      : <h1 >aucuns chiens disponible...</h1>}
  </section>
</Layout>
