---
const { page_type, img_url, title, line, text, links = [] } = Astro.props;
---

<div class=`relative ${page_type === "blog" ? 'h-[calc(100vh-300px)]' : 'h-[calc(100vh-100px)]'} bg-lightBlue`>
    {img_url && (
    <div class="h-full w-full rounded-2xl px-20 py-14">
        <img src={img_url} alt="Hero" class="h-full w-full object-cover rounded-2xl brightness-40 bg-black/90" />
    </div>
    )}
    <div class=`absolute ${page_type === "contact" ? 'top-2/5' : 'top-1/2'} left-1/2 -translate-1/2 flex flex-col gap-8 w-full items-center justify-center px-50 text-center`>
        <div class="flex flex-col gap-6 text-white">
            {title && (
                <h2 class="relative text-[60px] font-title font-black leading-[120%] -tracking-[1.2px]">
                    {title}
                    {line && (
                        <img src="/svg/line.svg" alt="Ligne décorative" class="absolute top-full right-25" />
                    )}
                </h2>
            )}
            {text && (
                <h5 class="text-xl font-medium leading-[130%]">{text}</h5>
            )}
        </div>
        <div class="flex items-center justify-center gap-6 flex-wrap">
            {links.map(link => (
                <a
                href={link.href}
                class={`${link.type === "primary" ? "bg-blue text-darkBlue" : link.type === "secondary" ? "bg-white/20 backdrop-blur-md text-white" : ""} flex items-center gap-2 rounded-lg p-4 font-bold leading-[130%]`}
                >
                {link.icon === "phone" && (
                    <img src="/svg/contact-phone.svg" alt="Icône de téléphone" />
                )}
                {link.icon === "mail" && (
                    <img src="/svg/contact-mail.svg" alt="Icône de mail" />
                )}
                {link.icon === "ping" && (
                    <img src="/svg/contact-ping.svg" alt="Icône de ping" />
                )}
                {link.label}
                {link.icon === "arrow" && (
                    <img src="/svg/arrow-right-dark.svg" alt="Icône de flèche" />
                )}
                </a>
            ))}
        </div>
    </div>
</div>
<img src="/svg/hero-bottom.svg" alt="Élément décoratif" class="w-full">